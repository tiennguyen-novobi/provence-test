<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="amazon_marketplace_tree_view" model="ir.ui.view">
        <field name="name">amazon.marketplace.tree</field>
        <field name="model">amazon.marketplace</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="api_ref"/>
            </tree>
        </field>
    </record>

    <record id="amazon_marketplace_form_view" model="ir.ui.view">
        <field name="name">amazon.marketplace.form</field>
        <field name="model">amazon.marketplace</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="api_ref"/>
                        </group>
                    </group>
                </sheet>
                
            </form>
        </field>
    </record>
</odoo>